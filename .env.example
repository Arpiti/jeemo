# Primary Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Additional Telegram Bots (optional - for multi-bot support)
TELEGRAM_BOT_TOKEN_2=your_second_telegram_bot_token_here
TELEGRAM_BOT_TOKEN_3=your_third_telegram_bot_token_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# YouTube API Configuration
YOUTUBE_API_KEY=your_youtube_api_key_here

# Redis Configuration (optional - will use in-memory storage if not provided)
REDIS_URL=redis://localhost:6379

# Application Configuration
PORT=3000
NODE_ENV=development

# Webhook Configuration (set USE_WEBHOOKS=true to enable webhook mode)
USE_WEBHOOKS=false
WEBHOOK_URL=https://your-domain.com
WEBHOOK_URL_2=https://your-domain-2.com
WEBHOOK_URL_3=https://your-domain-3.com